{% if not craft.config.devMode %}
{% requireLogin %}
{% endif %}
<!doctype html>

<head>
	<meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />

  <title>{% if title is defined %}{{ title }} - {% endif %}{{ siteName }}</title>

  <link rel="home" href="{{ siteUrl }}" />
  <link rel="stylesheet" href="/style.css">

  {% includeJsFile "/vendor/modernizr/modernizr.js" %}
  {% includeJsFile "/vendor/fastclick/lib/fastclick.js" %}
  {% includeJsFile "/vendor/jquery/dist/jquery.min.js" %}
</head>

<body>
{% if craft.Adminbar is defined and entry is defined and not craft.request.isLivePreview %}
  {{ craft.Adminbar.show(entry) }}
{% endif %}  
  
{% cache if craft.config.cache %}
  {% include 'partials/header' %}
{% endcache %}

  <main id="top">
    {% block content %}
    {% endblock content %}
  </main>

  {% cache if craft.config.cache %}
    {% include 'partials/footer' %}
  {% endcache %}

  {% includeJsFile "/js/dist.js" %}
</body>
